<div class="content">
    <h2 class="content-head is-center">How many times does Trump show up on the front page of the news?</h2>

    <div class="pure-g">
        <div class="pure-u-1-3"></div>
        <div class="pure-u-1-3 pure-form text-center">
            <div class="view-option">
                <label>View Options
                    <br />
                <button class="button-error pure-button individual">Individual</button>
                <button class="pure-button aggregate">Aggregate</button>
                    </label>
            </div>
            <hr />
            <label class="">Sort News Sources By:
                <br />
                <select name="sort-by" class="sort-by pure-input-1-2">
                    <option value="count">Latest Count</option>
                    <option value="average">Average</option>
                </select>
            </label>
        </div>
        <div class="pure-u-1-3"></div>
    </div>
    
    <div class="side-by-side hidden">
        <div id="side-by-side-chart" class="hc-all-sources" data-instances="{{JSON2string sources}}" style="width:100% height: 400px; margin: 0 auto"></div>
    </div>
    
        
    <div class="pure-g base-grid">

        {{#each sources}}

        <div class="l-box pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <div class="child-grid-box">

                <a target="_blank" class="unstyled" href="{{this.src}}">
                    <h3 class="content-subhead">
                        <span class="text-left">{{this.name}}</span>
                        <span class="text-right text-red"><i class="fa fa-bullhorn"></i>{{this.count}}</span>
                    </h3>
                </a>
                <hr />
                <p>The average since {{this.span}}, is <span class="emphasis">{{this.average}}</span> mentions.</p>
                <div id="{{this.src}}" class="hc-trump-charts" data-instances="{{JSON2string this.instances}}" style="width:100% height: 200px; margin: 0 auto"></div>
            </div>
        </div>

        {{/each}}
        

    </div>
    
</div>