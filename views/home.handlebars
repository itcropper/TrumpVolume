<div class="content">
    <h2 class="content-head is-center">How many times does Trump show up on the front page the news?</h2>

    <div class="pure-g">

        {{#each sources}}

        <div class="l-box pure-u-1 pure-u-md-1-2 pure-u-lg-1-4">
            <div class="child-grid-box">

                <a class="unstyled" href="{{this.src}}">
                    <h3 class="content-subhead">{{this.name}}</h3>
                </a>
                <hr />
                <p>Currently {{this.count}} Trumps</p>
                <p>The average over the past {{this.span}} has been {{this.average}} Trumps</p>
                <div id="{{this.src}}" class="hc-trump-charts" data-instances="{{JSON2string this.instances}}" style="width:100% height: 200px; margin: 0 auto"></div>
            </div>
        </div>

        {{/each}}
        

    </div>
</div>